<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Accident Code Form View -->
    <record id="view_accident_code_form" model="ir.ui.view">
        <field name="name">hic.category.accident.form</field>
        <field name="model">hic.category</field>
        <field name="arch" type="xml">
            <form string="Accident Code">
                <sheet>
                    <group>
                        <group>
                            <field name="code" string="Accident Code" />
                        </group>
                        <group>
                            <field name="name" string="Accident Name" />
                            <field name="active" invisible="1" />
                            <field name="category_type" invisible="1" />
                        </group>
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- Accident Code List View -->
    <record id="view_accident_code_list" model="ir.ui.view">
        <field name="name">hic.category.accident.list</field>
        <field name="model">hic.category</field>
        <field name="arch" type="xml">
            <list string="Accident Code List">
                <field name="code" string="Accident Code" width="20%" />
                <field name="name" string="Accident Name" width="50%" />
                <field name="create_uid" width="10%" />
            </list>
        </field>
    </record>

    <!-- Accident Code Search View -->
    <record id="view_accident_code_search" model="ir.ui.view">
        <field name="name">hic.category.accident.search</field>
        <field name="model">hic.category</field>
        <field name="arch" type="xml">
            <search string="Search Accident Code">
                <field name="code" string="Accident Code" />
                <field name="name" string="Accident Name" />
                <separator />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
            </search>
        </field>
    </record>

    <!-- Accident Code Action -->
    <record id="action_accident_code" model="ir.actions.act_window">
        <field name="name">Accident Code</field>
        <field name="res_model">hic.category</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_accident_code_list" />
        <field name="context">{
            'default_category_type': 'accident_code',
            'form_view_ref': 'health_insurance_claim.view_accident_code_form'
        }</field>
        <field name="domain">[('category_type', '=', 'accident_code')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first accident code!
            </p>
            <p>
                Define accident codes and their corresponding names.
            </p>
        </field>
    </record>
</odoo>
